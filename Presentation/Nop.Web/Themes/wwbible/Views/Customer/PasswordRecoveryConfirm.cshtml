@model PasswordRecoveryConfirmModel
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
    //page class
    Html.AppendPageCssClassParts("html-password-recovery-page");
}
@using Nop.Web.Models.Customer;

<div class="page-top">
    <div class="page-top-body">
        <div class="col-sm-6 page-top-left">
            <span class="page-title">@T("Account.PasswordRecovery")</span>
        </div>
        <div class="clearfix"> </div>
    </div>
    <div class="page-top-line">
        <div class="col-sm-2"></div>
        <div class="col-sm-10" style="padding:0; ">
            <hr style="border-color:#d2d2d2;margin:3px 0 0 0;">
            <hr style="border-color:#aa89bd;margin:3px 0 0 50px;">
            <hr style="border-color:#d2d2d2;margin:3px 0 0 100px;">
        </div>
    </div>
</div>

<div class="page password-recovery-page">    
    <div class="form-body">
        @if (!String.IsNullOrEmpty(Model.Result))
        {
            <div class="result">
                @Model.Result
            </div>
        }
        @if (!Model.DisablePasswordChanging)
        {
            using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="fieldset">
                    <div class="form-fields">
                        <div class="inputs">
                            @Html.LabelFor(model => model.NewPassword, new { }, ":")
                            @Html.EditorFor(model => model.NewPassword)
                            @Html.RequiredHint()
                            @Html.ValidationMessageFor(model => model.NewPassword)
                        </div>
                        <div class="inputs">
                            @Html.LabelFor(model => model.ConfirmNewPassword, new { }, ":")
                            @Html.EditorFor(model => model.ConfirmNewPassword)
                            @Html.RequiredHint()
                            @Html.ValidationMessageFor(model => model.ConfirmNewPassword)
                        </div>
                    </div>
                </div>
                <div class="buttons">
                    <input type="submit" name="set-password" class="btn new-password-button" value="@T("Account.PasswordRecovery.ChangePasswordButton")" />
                </div>
            }
        }
    </div>
</div>
